{
	"extends": "airbnb/base",

	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"mocha": true
	},

	"plugins": ["react"],

	"ecmaFeatures": {
		"es6": true,
		"jsx": true
	},

	"globals": {
	},

	"rules": {
		"indent": [2, "tab", { 'SwitchCase': 1, 'VariableDeclarator': 1 }],
		"no-shadow": 1,
		"arrow-body-style": 1,
		"no-alert": 0,
		"no-unused-vars": 1,
		"no-console": 0,
		"no-use-before-define": 0,
		"comma-dangle": 0,
		"quote-props": 0,
		"dot-notation": 0,
		"spaces-in-parens": 0,
		"spaced-comment": 0,
		"max-len": 0
	}
}
