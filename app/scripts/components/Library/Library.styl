.library-component
	user-select: none

	.search, .add
		margin: 0
		margin-top: 0.5em
		margin-bottom: 0.5em

	.type-filter
		label
			margin-right: 1em
			font-weight: normal

	.results
		max-height: 300px
		overflow-y: auto
		background: lightgrey

		ul
			list-style: none
			margin: 0
			padding: 0
			display: block

			li
				background-color: rgb(245, 245, 245)
				border-radius: 0
				cursor: move
				padding-left: 10px
				padding-right: 10px
				padding-top: 5px
				padding-bottom: 5px

				.badge
					float: right
					font-weight: normal
					margin-top: 0.15em

			.draghint
				display: none
				color: white

			.remove
				display: none
				cursor: pointer

			.normal
				display: inline

			li:hover
				background: $highlightColor

				.normal
					display: none

				.draghint
					display: inline

				.remove
					display: inline-block
