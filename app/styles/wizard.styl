#wizard-container
	// position: relative

	h2.title
		color: $trespass_red

	#steps-container
		position: absolute
		top: 0
		right: $panelWidth
		// right: $panelWidth - ($panelPadding / 2)

		height: 100%
		display: flex
		flex-direction: column
		// align-items: center
		justify-content: center

		.step-icon
			width: $wizard-tabWidth
			// height: $wizard-tabWidth
			margin-right: 2px
			margin-top: 1px
			margin-bottom: 1px
			padding: 4px
			// padding-right: 4px
			// padding-top: 2px
			// padding-bottom: 2px
			z-index: 999
			cursor: pointer
			// ----
			// margin-bottom: 5px
			// ----
			$radius = ($wizard-tabWidth / 2)
			border-radius: $radius
			opacity: 1

		.step-icon img
			width: 100%

		transition: opacity 0.5s

		.step-icon.disabled
			cursor: default
			opacity: 0.25
			background-color: transparent !important

		.step-icon.error
			background-color: rgba($trespass_red, 0.5)

		// currently selected one
		.step-icon.selected
			background-color: $wizard-selectedColor

		// all the ones after selected one
		.step-icon.selected ~ .step-icon
			//

		// all the ones before selected one
		.step-icon
			//

		// visited ones: override everything else
		.step-icon.visited
			// background-color: orange !important


.tooltip
	.tooltip-inner
		font-size: $baseFontSize
