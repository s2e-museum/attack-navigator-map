.context-menu
	cursor: pointer

	text
		&, & tspan
			alignment-baseline: middle
			text-anchor: middle
			pointer-events: none
			fill: black

		&.icon
			font-size: 20px
		&.label
			font-family: $font
			font-size: 10px
			font-weight: 500


	.menu-item
		fill: lightgrey
		&.destructive
			fill: #dbabae
		stroke-width: 1.5px
		stroke: white
	.menu-item:hover
		fill: white
