.edge-group
	.edge
		stroke-width: 15
		stroke: rgb(170, 170, 167)
		fill: none

		&:hover, &.preview
			stroke: $edgeStrokeSelected !important
		&.selected
			stroke: $edgeStrokeSelected !important

	.edge.predicate
		stroke-width: 5
		stroke: $edgeStroke

	.label
		font-size: 14px
		font-family: $font
		font-weight: 500
		fill: white
		opacity: 1
		text-anchor: middle
		alignment-baseline: middle
		pointer-events: none
