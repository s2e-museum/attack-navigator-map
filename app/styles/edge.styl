.edge-group
	$selectedStroke = orange

	.edge
		opacity: 0.5
		stroke-width: 4
		stroke: black
		fill: none

		&:hover, &.preview
			stroke: gold
			stroke-width: 5
		&.selected
			stroke: $selectedStroke
			stroke-width: 5

	.label
		font-size: 12px
		font-family: sans-serif
		fill: white
		opacity: 1
		text-anchor: middle
		alignment-baseline: middle
		pointer-events: none
