#task-overlay
	background-color: rgb(255, 255, 255)
	z-index: 999999
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	overflowY: auto
	overflowX: hidden
	display: flex
	align-items: center
	justify-content: center

	.completed
		font-weight: 500 !important
	.result-link
		font-size: $baseFontSize !important
	.current
		font-weight: 600 !important
	.error
		color: $trespass_red;
	.pending
		font-weight: 500 !important
