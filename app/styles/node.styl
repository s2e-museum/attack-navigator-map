.not-editable
	.node-group
		cursor: auto
		.node:hover
			stroke-width: 0px

.node-group
	cursor: pointer

	.node
		fill: $highlightColor
		opacity: 1
		stroke: black
		stroke-width: 0px
		&.hover
			// stroke-width: 1.5px
			fill: $selectedFill
		&.selected
			fill: $selectedFill

	.port-group
		.port
			fill: white
			stroke: black
			stroke-width: 2px
		.spiral
			font-family: 'icons'
			fill: black
			text-anchor: middle
			alignment-baseline: middle
			font-size: 12px

	.label, .icon
		fill: black
		text-anchor: middle
		alignment-baseline: middle
		pointer-events: none
	.label
		font-size: $baseFontSize
		font-family: $font
	.icon
		font-size: 22px
