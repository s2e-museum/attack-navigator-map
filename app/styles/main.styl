}

#eval-chart {
}

#eval-chart .axis line,
.axis path {
    shape-rendering: crispEdges;
    stroke: gray;
    fill: none;
}

#eval-chart .axis {
    fill: gray;
}

#eval-chart .axis-label {
    fill: gray;
}
#eval-chart circle {
    fill: black;
}
#eval-chart .connect-line {
    stroke: #00091f;
    stroke-width: 2;
    fill: none;
}
#eval-chart .node {
    cursor: pointer;
}
#eval-chart .node circle {
    fill: #fff;
    stroke: steelblue;
    stroke-width: 3px;
}
#eval-chart .node text {
    font: 12px sans-serif;
}
#eval-chart .link {
    fill: none;
    stroke: #ccc;
    stroke-width: 2px;
}

/* Tree */
.node circle {
	fill: #fff;
	stroke: gray;
	stroke-width: 3px;
}
.node text {
	font-size: 12px;
}
.link {
	fill: none;
	stroke: #ccc;
	stroke-width: 2px;
}

#tree {
	display: block;
	width: 75vw;
}



